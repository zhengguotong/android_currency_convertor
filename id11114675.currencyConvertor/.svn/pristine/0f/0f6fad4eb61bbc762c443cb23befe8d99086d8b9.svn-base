<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    >
	<TextView
	    style="@android:style/Widget.EditText"
	    android:layout_width="245dp"
	    android:layout_height="wrap_content"
	    android:id="@+id/a_amount"
	    />
	<TableLayout
	    android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_below="@id/a_amount"
        android:id="@+id/a_numbers"
        >
        <TableRow>
            <Button 
                android:layout_width="60dp" 
                android:layout_height="wrap_content"
                android:text="@string/a_one"
                android:onClick="oneHandler"
                android:id="@+id/a_one"
                />
            <Button 
                android:layout_width="60dp" 
                android:layout_height="wrap_content"
                android:text="@string/a_two"
                android:onClick="twoHandler"
                android:id="@+id/a_two"
                />
            <Button 
                android:layout_width="60dp" 
                android:layout_height="wrap_content"
                android:text="@string/a_three"
                android:onClick="threeHandler"
                android:id="@+id/a_three"
                />
            <Button 
                android:layout_width="60dp" 
                android:layout_height="wrap_content"
                android:text="@string/a_four"
                android:onClick="fourHandler"
                android:id="@+id/a_four"
                />
        </TableRow>
        
       <TableRow>
            <Button 
                android:layout_width="60dp" 
                android:layout_height="wrap_content"
                android:text="@string/a_five"
                android:onClick="fiveHandler"
                android:id="@+id/a_five"
                />
            <Button 
                android:layout_width="60dp" 
                android:layout_height="wrap_content"
                android:text="@string/a_six"
                android:onClick="sixHandler"
                android:id="@+id/a_six"
                />
            <Button 
                android:layout_width="60dp" 
                android:layout_height="wrap_content"
                android:text="@string/a_seven"
                android:onClick="sevenHandler"
                android:id="@+id/a_seven"
                />
            <Button 
                android:layout_width="60dp" 
                android:layout_height="wrap_content"
                android:text="@string/a_eight"
                android:onClick="eightHandler"
                android:id="@+id/a_eight"
                />
        </TableRow>
        
          <TableRow>
            <Button 
                android:layout_width="60dp" 
                android:layout_height="wrap_content"
                android:text="@string/a_nine"
                android:onClick="nineHandler"
                android:id="@+id/a_nine"
                />
            <Button 
                android:layout_width="60dp" 
                android:layout_height="wrap_content"
                android:text="@string/a_zero"
                android:onClick="zeroHandler"
                android:id="@+id/a_zero"
                />
            <Button 
                android:layout_width="60dp" 
                android:layout_height="wrap_content"
                android:text="@string/a_hundred"
                android:onClick="hundredHandler"
                android:id="@+id/a_hundred"
                />
           <Button 
			    android:layout_width="60dp" 
		        android:layout_height="wrap_content"
		        android:text="@string/a_point"
		        android:onClick="pointHandler"
		        android:id="@+id/point"
		        />
        </TableRow>
	</TableLayout>
	<Button 
	    android:layout_width="60dp" 
        android:layout_height="wrap_content"
        android:text="@string/a_del"
        android:textColor="@color/red"
        android:layout_below="@id/a_numbers"
        android:onClick="delHandler"
        android:id="@+id/a_del"
        />
	<Button 
	    android:layout_width="60dp" 
        android:layout_height="wrap_content"
        android:text="@string/a_ac"
        android:textColor="@color/red"
        android:layout_below="@id/a_numbers"
        android:layout_toRightOf="@id/a_del"
        android:onClick="acHandler"
        android:id="@+id/a_ac"
        />
	<Button 
	    android:layout_width="120dp" 
        android:layout_height="wrap_content"
        android:text="@string/a_ok"
        android:textColor="@color/blue"
        android:textSize="8pt"
        android:layout_below="@id/a_numbers"
        android:layout_toRightOf="@id/a_ac"
        android:onClick="okHandler"
        android:id="@+id/a_ok"
        />
</RelativeLayout>