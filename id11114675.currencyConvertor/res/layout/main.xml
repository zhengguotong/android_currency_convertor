<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/grey"
	    android:layout_marginBottom="10px"
	    android:id="@+id/title_group"
	    >
	    <TextView  
	         android:layout_height="wrap_content" 
	         android:layout_width="wrap_content" 
	         android:text="@string/courrecy_covertor" 
	         android:layout_centerVertical="true"
	         android:layout_centerHorizontal="true"
	        />
	     <ImageButton
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:src="@drawable/chart"
	         android:layout_alignParentRight="true"
	         android:id="@+id/m_chart_button"
	         android:onClick="chartViewHandler"
	         />
	     <ImageButton 
	         android:layout_height="wrap_content" 
             android:id="@+id/list_view_button" 
             android:src="@drawable/list_view" 
             android:layout_width="wrap_content" 
             android:layout_alignParentTop="true" 
             android:layout_alignParentLeft="true"
             android:clickable="false"
              />         
	</RelativeLayout>
		
	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/purple"
	    android:cacheColorHint="#00000000"
	    android:layout_below="@id/title_group"
	    android:onClick="baseCurrencyGroupHandler"
	    android:id="@+id/base_currency_group"
	    >
	    <TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:layout_marginLeft="5px"
		    android:textSize="8pt"
		    android:id="@+id/base_currency_code"
		    />
		<ImageView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_toLeftOf="@id/base_currency_code"
		    android:layout_marginLeft="5px"
		    android:id="@+id/base_currency_flag"
		    />
	    <TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textSize="8pt"
		    android:textColor="@color/yellow"
		    android:layout_toLeftOf="@id/base_currency_flag"
		    android:id="@+id/base_currency_amount"
		    />
	</RelativeLayout>
	<TextView 
	     android:layout_width="fill_parent"
		 android:layout_height="wrap_content"
		 android:background="@color/grey"
		 android:cacheColorHint="#00000000"
		 android:text="is equal to "
		 android:gravity="center"
		 android:textSize="8pt"
		 android:layout_below="@id/base_currency_group"
		 android:id="@+id/equal_text"/>
	<TextView 
        android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/last_update"
		android:background="@color/grey"
		android:cacheColorHint="#00000000"
		android:layout_alignParentBottom="true"
		android:id="@+id/last_update_time"
        />
	<Button
	    android:layout_width="fill_parent"
		android:layout_height="wrap_content"
	    android:background="@color/purple"
	    android:cacheColorHint="#00000000"
		android:text="@string/add_currency"
		android:textSize="8pt"
		android:layout_marginTop="10px"
		android:layout_marginBottom="10px"
		android:onClick="addCurrencyHandler"
		android:layout_above="@id/last_update_time"
		android:id="@+id/add_currency_button"
		/>
		
    <ListView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
	    android:background="@color/purple"
	    android:cacheColorHint="#00000000"
		android:layout_above="@id/add_currency_button"
		android:layout_below="@id/equal_text"
		android:id="@id/android:list"
	    />
	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@color/purple"
	    android:cacheColorHint="#00000000"
		android:text="@string/not_currency"
		android:gravity="center_vertical|center_horizontal"
		android:layout_above="@id/add_currency_button"
		android:layout_below="@id/equal_text"
		android:id="@id/android:empty"
		/>
</RelativeLayout>
